@model EventSwift.Models.User

@{
    ViewBag.Title = "Create";
    ViewBag.SkipNavbar = true; // This hides the main layout navbar
}

<div class="d-flex">
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

    <div class="flex-grow-1 p-2">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")

        <h2>Add User</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Username, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.PasswordHash, "Password", new { @class = "form-label" })
                @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Role, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.Role, new SelectList(new[] { "SuperAdmin", "Client", "VPAA", "VPF", "AMU", "President" }), "Select Role", new { @class = "form-select" })
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>
