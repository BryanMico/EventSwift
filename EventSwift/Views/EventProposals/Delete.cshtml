@model EventSwift.Models.EventProposal

@{
    ViewBag.Title = "Delete Proposal";
    ViewBag.SkipNavbar = true; // hide main layout navbar if needed
}

<div class="d-flex">
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

    <div class="flex-grow-1 p-2">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")

        <h2>Delete Proposal</h2>

        <div class="alert alert-danger">
            Are you sure you want to delete this proposal: <strong>@Model.Title</strong>?
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.EventProposalId)

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        }
    </div>
</div>
